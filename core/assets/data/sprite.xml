<sprite>
	<subsprite path="sprite.png">
		<animation id="still" speed="0.001">
			<frame x="0" y="0" width="200" height="200" drawx="0" drawy="0"/>
		</animation>
		<animation id="spinTest" speed="0.01">
			<frame x="0" y="0" width="100" height="100" drawx="0" drawy="100"/>
			<frame rotation="~2" repeats="180"/>
		</animation>
		<animation id="relTest" speed="0.001">
			<frame drawx="0"/>
			<frame drawx="~1" repeats="1000"/>
			<frame drawx="~-1" repeats="1000"/>
		</animation>
	</subsprite>
</sprite>
